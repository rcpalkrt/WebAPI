@using WebAPIProject1.WebUI.Models;
@model Employee

@{
    ViewBag.Title = "PostEmployee";
}

<h1>Personel Duzenle</h1>

@using (Html.BeginForm("EditEmployee", "Home", FormMethod.Post))
{
    <input type="hidden" name="ID" value="@Model.ID"/>
    <div class="form-group row">
        <label for="inputPassword" class="col-sm-2 col-form-label">Personel Adi</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="inputPassword" name="Name" value="@Model.Name">
        </div>
    </div>
    <div class="form-group row">
        <label for="inputPassword" class="col-sm-2 col-form-label">Personel Soyadi</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="inputPassword" name="SurName" value="@Model.SurName">
        </div>
    </div>
    <div class="form-group row">
        <label for="inputPassword" class="col-sm-2 col-form-label">Maasi</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="inputPassword" name="Salary"  value="@Model.Salary">
        </div>
    </div>
    <div class="form-group row">
        <label for="inputPassword" class="col-sm-2 col-form-label">Departmani</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="inputPassword" name="Departman"  value="@Model.Departman">
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <input type="submit" value="Guncelle" class="btn btn-success" />
        </div>
    </div>

}



